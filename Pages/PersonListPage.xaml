<ContentPage
    x:Class="appLogin.PersonListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="">
    <StackLayout Padding="10" BackgroundColor="grey">
        <ListView x:Name="UsersListView" ItemTapped="OnUserTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Detail="{Binding Phone}" Text="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackLayout
            x:Name="UserDetailsLayout"
            Padding="10"
            IsVisible="False">
            <Label Text="Nome:" />
            <Label x:Name="NameLabel" />
            <Label Text="Telefone:" />
            <Label x:Name="PhoneLabel" />
            <Label Text="CPF:" />
            <Label x:Name="CPFLabel" />
        </StackLayout>
    </StackLayout>
</ContentPage>
