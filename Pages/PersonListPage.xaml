<ContentPage
    x:Class="appLogin.PersonListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="">

    <StackLayout Padding="10" BackgroundColor="grey">
        <ListView x:Name="UsersListView" ItemTapped="OnUserTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Detail="{Binding Phone}" Text="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackLayout
            x:Name="UserDetailsLayout"
            Padding="10"
            IsVisible="False">
            <Label Text="Nome:" />
            <Entry x:Name="NameEntry" />

            <Label Text="Telefone:" />
            <Entry x:Name="PhoneEntry" />

            <Label Text="CPF:" />
            <Entry x:Name="CPFEntry" />

            <Button Text="Salvar" Clicked="OnSaveClicked" Margin="10"/>
            <Button Text="Cancelar" Clicked="OnCancelClicked" Margin="10"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
