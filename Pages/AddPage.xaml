<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="appLogin.AddPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="">
    <AbsoluteLayout BackgroundColor="grey">
        <VerticalStackLayout Padding="10">
            <Label
                FontSize="36"
                HorizontalOptions="Center"
                Text="Adicionar Pessoa" />
            <Frame Padding="5" BorderColor="Gray">
                <Entry x:Name="NameEntryAdd" Placeholder="Nome" />
            </Frame>
            <Frame Padding="5" BorderColor="Gray">
                <Entry
                    x:Name="CPFEntryAdd"
                    Keyboard="Numeric"
                    Placeholder="CPF" />
            </Frame>
            <Frame Padding="5" BorderColor="Gray">
                <Entry
                    x:Name="TellEntryAdd"
                    Keyboard="Numeric"
                    Placeholder="Telefone" />
            </Frame>
            <Button Clicked="OnAddUserClicked" Text="Adicionar" />
        </VerticalStackLayout>
    </AbsoluteLayout>
</ContentPage>
